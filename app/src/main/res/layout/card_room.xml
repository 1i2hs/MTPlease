<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:background="@android:color/white"
                                    android:orientation="horizontal"
                                    card_view:cardCornerRadius="0dp">


    <LinearLayout
        android:id="@+id/LinearLayout_card_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_thumbnail_room"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/imageView_sticker_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView_thumbnail_room"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:layout_alignTop="@+id/imageView_thumbnail_room"/>

            <LinearLayout
                android:id="@+id/layout_option_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@+id/imageView_thumbnail_room"
                android:layout_alignBaseline="@+id/imageView_thumbnail_room"
                android:layout_alignRight="@+id/imageView_thumbnail_room"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:id="@+id/imageView_option_aircon_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_air_conditioner"
                    android:layout_marginRight="8dp"/>

                <ImageView
                    android:id="@+id/imageView_option_pickup_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_pick_up"
                    android:layout_marginRight="8dp"/>

                <ImageView
                    android:id="@+id/imageView_option_playground_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_playground"
                    android:layout_marginRight="8dp"/>

                <ImageView
                    android:id="@+id/imageView_option_barbecue_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_barbecue"
                    android:layout_marginRight="8dp"/>

                <ImageView
                    android:id="@+id/imageView_option_valley_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_valley"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/cardView_padding"
            android:paddingRight="@dimen/cardView_padding"
            android:paddingTop="12dp"
            android:paddingBottom="@dimen/cardView_padding">

            <TextView
                android:id="@+id/textView_name_room_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="5"
                android:singleLine="true"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/mtplease_main_text_color"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/textView_name_pension_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_name_room_card"
                android:layout_marginBottom="8dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/mtplease_main_text_color"/>

            <TextView
                android:id="@+id/textView_number_range_of_people_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView_price_room_card"
                android:layout_alignBottom="@+id/textView_price_room_card"
                android:layout_alignLeft="@+id/textView_name_room_card"
                android:layout_alignStart="@+id/textView_name_room_card"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/mtplease_main_text_color"/>

            <TextView
                android:id="@+id/textView_price_room_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView_name_pension_card"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/mtplease_main_text_color"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>