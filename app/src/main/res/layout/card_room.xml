<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="4dp"
                                    android:background="@android:color/white"
                                    android:clickable="true"
                                    android:orientation="horizontal"
                                    card_view:cardCornerRadius="0dp">


    <LinearLayout
        android:id="@+id/LinearLayout_card_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView_thumbnail_room"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/scrn_room_img_place_holder"/>

            <ImageView
                android:id="@+id/imageView_sticker_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView_thumbnail_room"
                android:layout_alignTop="@+id/imageView_thumbnail_room"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:id="@+id/layout_option_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/imageView_thumbnail_room"
                android:layout_alignBottom="@+id/imageView_thumbnail_room"
                android:layout_alignRight="@+id/imageView_thumbnail_room"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView_option_aircon_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_air_conditioner"/>

                <ImageView
                    android:id="@+id/imageView_option_pickup_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_pick_up"/>

                <ImageView
                    android:id="@+id/imageView_option_playground_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_playground"/>

                <ImageView
                    android:id="@+id/imageView_option_barbecue_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_barbecue"/>

                <ImageView
                    android:id="@+id/imageView_option_valley_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_valley"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_title_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_thumbnail_room"
                android:background="@drawable/shape_card_title_gradient"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/textView_name_room_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="5"
                    android:singleLine="true"
                    android:text="Large Text"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView_name_pension_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_name_room_card"
                    android:layout_marginBottom="8dp"
                    android:text="Small Text"
                    android:textColor="#f0ffffff"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/cardView_padding"
            android:paddingLeft="@dimen/cardView_padding"
            android:paddingRight="@dimen/cardView_padding"
            android:paddingTop="@dimen/cardView_padding">

            <TextView
                android:id="@+id/textView_number_range_of_people_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView_price_room_card"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/mtplease_color_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_price_room_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/mtplease_color_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>