<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="horizontal"
                                    card_view:cardCornerRadius="0dp"
                                    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/mtplease_color_primary"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/cardView_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facility_and_service"
                android:id="@+id/textView_facility_and_service"
                android:textSize="20sp"
                android:textColor="@color/mtplease_main_text_color"
                android:layout_marginBottom="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facility"
                android:id="@+id/textView_facility"
                android:layout_marginBottom="12dp"
                android:textColor="@color/mtplease_main_text_color"
                android:textSize="20sp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:paddingLeft="@dimen/cardView_padding"
                android:paddingRight="@dimen/cardView_padding"
                android:paddingBottom="@dimen/cardView_padding"
                android:id="@+id/tableLayout_facility"
                android:layout_marginBottom="8dp">

            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shape_cell_bottom_line"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service"
                android:id="@+id/textView_service"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:textColor="@color/mtplease_main_text_color"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:paddingLeft="@dimen/cardView_padding"
                android:paddingRight="@dimen/cardView_padding"
                android:paddingBottom="@dimen/cardView_padding"
                android:id="@+id/tableLayout_service">

            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>