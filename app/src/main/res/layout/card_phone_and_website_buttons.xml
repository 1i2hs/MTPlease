<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:id="@+id/layout_buttons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_call_and_kakaotalk">

        <Button
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_big"
            android:text="@string/call_phone"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_big"
            android:text="@string/go_website"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_call_mtplease"
        android:background="@drawable/shape_button_big"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/layout_call_and_kakaotalk">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_mtplease"
                android:id="@+id/textView_call_mtplease"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_mtplease_explanation"
                android:id="@+id/textView_call_mtplease_sub"
                android:textSize="12sp"
                android:textColor="#ffff6565"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_call_pension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_big"
        android:text="@string/call_pension"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_below="@+id/layout_call_and_kakaotalk"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_space_call_mtplease"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:text="@string/call_mtplease"
        android:textColor="@android:color/transparent"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/layout_call_and_kakaotalk"/>

    <Button
        android:id="@+id/btn_space_call_pension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/call_mtplease"
        android:textColor="@android:color/transparent"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@+id/btn_space_call_mtplease"
        android:layout_marginBottom="4dp"/>

</RelativeLayout>