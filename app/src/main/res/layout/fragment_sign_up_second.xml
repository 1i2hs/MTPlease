<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/email_address_input"
            android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">

            <EditText
                android:id="@+id/editText_email_sign_up"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"/>

            <Button
                android:id="@+id/btn_authenticate_email_address"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText_email_sign_up"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="8dp"
                android:text="@string/authenticate_email_address"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/editText_email_sign_up"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_type_authentication_code"
                android:textSize="16sp"
                android:id="@+id/editText_email_authentication_code"
                android:layout_alignParentBottom="true"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_confirm_email_address_authentication_code"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText_email_authentication_code"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="8dp"
                android:text="@string/confirm"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/editText_email_authentication_code"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/password_input"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password_sign_up"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_password"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_confirm_password_sign_up"
            android:ems="10"
            android:hint="@string/hint_confirm_password"
            android:textSize="16sp"
            android:inputType="textPassword"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_go_page_previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffa0a0a0"
            android:text="@string/previous_page"
            android:textColor="#ffffffff"/>

        <Button
            android:id="@+id/btn_go_page_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF38E4FF"
            android:text="@string/next_page"
            android:textColor="#ffffffff"/>

    </LinearLayout>

</RelativeLayout>