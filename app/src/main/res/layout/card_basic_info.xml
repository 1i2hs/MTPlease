<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:orientation="horizontal"
                                    card_view:cardCornerRadius="0dp"
                                    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/mtplease_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_info"
            android:id="@+id/textView_info_basic"
            android:textSize="20sp"
            android:textColor="@color/mtplease_color_text_primary"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:paddingLeft="@dimen/cardView_padding"
            android:paddingRight="@dimen/cardView_padding"
            android:paddingBottom="@dimen/cardView_padding">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/textView_time_checkin"
                    android:textSize="16sp"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:password="false"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_time_checkout"
                    android:layout_alignParentRight="true"
                    android:text="Z"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textView_num_rooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:text="A"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textView_num_toilets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textSize="16sp"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/textView_people_number_std"
                    android:layout_alignParentLeft="true"
                    android:textSize="16sp"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:id="@+id/textView_people_number_max"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/textView_structure_room"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/textView_size_room"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/mtplease_color_text_primary"
                    android:textSize="16sp"
                    style="1"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>