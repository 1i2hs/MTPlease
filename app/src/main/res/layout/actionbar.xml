<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView_icon_drawer"
        android:src="@drawable/ic_drawer"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:clickable="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/layout_title_actionbar"
        android:layout_toRightOf="@+id/imageView_icon_drawer">

        <TextView
            android:id="@+id/textView_title_actionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/actionbar_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_subtitle_actionBar"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_gravity="left"/>
    </LinearLayout>

</RelativeLayout>


