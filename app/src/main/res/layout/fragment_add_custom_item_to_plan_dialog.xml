<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <EditText
            android:id="@+id/editText_name_custom_item_dialog"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/editText_unit_custom_item_dialog"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/editText_name_custom_item_dialog"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@id/editText_name_custom_item_dialog"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_unit_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/currency_unit"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText_price_custom_dialog"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView_unit_currency"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:lines="1"
            android:numeric="integer"
            android:singleLine="true"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <NumberPicker
            android:id="@+id/numberPicker_number_custom_item_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/editText_unit_count_custom_item_dialog"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/numberPicker_number_custom_item_dialog"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:lines="1"
            android:singleLine="true"
            android:textSize="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_text_price_total_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/total"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textView_price_total_custom_dialog"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView_text_price_total_custom"
            android:gravity="center"
            android:textSize="24sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_custom_item_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/cancel_item"/>

        <Button
            android:id="@+id/btn_add_custom_item_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/add_item"/>

    </LinearLayout>

</LinearLayout>