<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context="com.owo.mtplease.fragment.SelectNightsDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/mtplease_color_primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="0.70">

            <RelativeLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView_header_nights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/textView_header_nights"
                    android:layout_alignLeft="@+id/textView_header_nights"
                    android:layout_alignRight="@+id/textView_header_nights"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView_header_unit_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/unit_night"
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textView_header_day"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="2"
                android:textColor="@color/mtplease_text_color_white_primary_light"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textView_header_unit_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_day"
                android:textColor="@color/mtplease_text_color_white_primary_light"
                android:textSize="24sp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout_input_nights"
            android:padding="24dp"
            android:layout_weight="0.30"
            android:gravity="center">

            <NumberPicker
                android:id="@+id/numberPicker_select_nights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView_unit_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/numberPicker_select_nights"
                android:text="@string/unit_night"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>

